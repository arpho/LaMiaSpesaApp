<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/testo_sviluppo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="ModalitÃ "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/testo_prodotto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="item name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/immagine_prodotto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/immagine_prodotto"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/testo_descrizione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="23dp"
        android:layout_weight="0.10"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/voteup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="voteup"
            android:src="@drawable/up" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="0dp" />

        <ImageButton
            android:id="@+id/votedown"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="votedown"
            android:src="@drawable/dwn" />
    </LinearLayout>

</LinearLayout>