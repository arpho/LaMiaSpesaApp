<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<ImageView
        android:id="@+id/immagine_prodotto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/immagine_prodotto"
        android:background="@drawable/noimage"
        android:scaleType="fitXY" />
    <TextView
        android:id="@+id/testo_prodotto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="item name"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    

    <TextView
        android:id="@+id/testo_descrizione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <ImageButton
            android:id="@+id/voteup"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="voteup"
            android:src="@drawable/ic_action_good" />

        <TextView
            android:id="@+id/mipiace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageButton
            android:id="@+id/votedown"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="votedown"
            android:src="@drawable/ic_action_bad" />

        <TextView
            android:id="@+id/nonmipiace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

        

    </LinearLayout>

</LinearLayout>